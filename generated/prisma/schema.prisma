generator client {
  provider   = "prisma-client-js"
  output     = "../generated/prisma"
  // This line FIXES your specific crash by forcing the standard engine:
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  // Put the URL back here now that the config file is gone:
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  userName    String
  email       String  @unique
  password    String
  phoneNumber String?
}

model Airplane {
  id          Int      @id @default(autoincrement())
  modelNumber String
  capacity    Int      @default(200)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
