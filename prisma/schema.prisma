generator client {
  provider   = "prisma-client-js"
  output     = "../generated/prisma"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  userName    String
  email       String  @unique
  password    String
  phoneNumber String?
}

model Airplane {
  id          Int       @id @default(autoincrement())
  modelNumber String
  capacity    Int       @default(200)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model City {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  airports Airport[]
}

model Airport {
  id      Int    @id @default(autoincrement())
  name    String @unique
  code    String @unique
  address String?            // removed unique unless needed
  cityId  Int
  city City @relation(fields: [cityId], references: [id], onDelete: Cascade)
  @@index([cityId])
}

model Flight {
  id                 Int      @id @default(autoincrement())
  flightNumber       String   // varchar(255) NOT NULL
  airplaneId         Int      // int NOT NULL
  departureAirportId String   // varchar(255) NOT NULL
  arrivalAirportId   String   // varchar(255) NOT NULL
  arrivalTime        DateTime // datetime NOT NULL
  departureTime      DateTime // datetime NOT NULL
  price              Int      // int NOT NULL
  boardingGate       String?  // varchar(255) NULL
  totalSeats         Int      // int NOT NULL

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  /// Optional indexes to reflect MySQL `MUL` keys (add if helpful)
  @@index([airplaneId])
  @@index([departureAirportId])
  @@index([arrivalAirportId])
}
